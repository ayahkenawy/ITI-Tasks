@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}
<div class="container-xl">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-6">
                        <h2>Manage <b>Employees</b></h2>
                    </div>
                    <div class="col-sm-6">
                        <a href="@Url.Action("Register","Validation")" class="btn btn-success"><i class='material-icons'>&#xE147;</i> <span>Add New Employee</span></a>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(emp=>emp.Fname)</th>
                        <th>@Html.DisplayNameFor(emp=>emp.Lname)</th>
                        <th>@Html.DisplayNameFor(emp=>emp.Address)</th>
                        <th>@Html.DisplayNameFor(emp=>emp.Age)</th>
                        <th>@Html.DisplayNameFor(emp=>emp.Salary)</th>
                        <th>@Html.DisplayNameFor(emp=>emp.Url)</th>
                        <th>@Html.DisplayNameFor(emp=>emp.Email)</th>
                        <th>@Html.DisplayNameFor(emp=>emp.BirthDate)</th>
                        <th>@Html.DisplayNameFor(emp=>emp.Department.DeptName)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th>@Html.DisplayFor(emp=>item.Fname)</th>
                            <th>@Html.DisplayFor(emp=>item.Address)</th>
                            <th>@Html.DisplayFor(emp=>item.Lname)</th>
                            <th>@Html.DisplayFor(emp=>item.Age)</th>
                            <th>@Html.DisplayFor(emp=>item.Salary)</th>
                            <th>@Html.DisplayFor(emp=>item.Url)</th>
                            <th>@Html.DisplayFor(emp=>item.Email)</th>
                            <th>@Html.DisplayFor(emp=>item.BirthDate)</th>
                            <th>@Html.DisplayFor(emp=>item.Department.DeptName)</th>
                            <td style="width:150px;">
                                <a href="@Url.Action("View","Home",new{Id=@item.Id})"class="edit"><i class="fa-solid fa-eye" style="font-size: x-large;"></i></a>
                                <a href="@Url.Action("Edit","Validation",new{Id=@item.Id})" class="edit"><i class="material-icons"  title="Edit">&#xE254;</i></a>
                                <a href="@Url.Action("Delete","Home",new{Id=@item.Id})" class="delete"><i class="material-icons"  title="Delete">&#xE872;</i></a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
            <div class="clearfix">
                <div class="hint-text">Showing <b>5</b> out of <b>25</b> entries</div>
                <ul class="pagination">
                    <li class="page-item disabled"><a href="#">Previous</a></li>
                    <li class="page-item"><a href="#" class="page-link">1</a></li>
                    <li class="page-item"><a href="#" class="page-link">2</a></li>
                    <li class="page-item active"><a href="#" class="page-link">3</a></li>
                    <li class="page-item"><a href="#" class="page-link">4</a></li>
                    <li class="page-item"><a href="#" class="page-link">5</a></li>
                    <li class="page-item"><a href="#" class="page-link">Next</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>


