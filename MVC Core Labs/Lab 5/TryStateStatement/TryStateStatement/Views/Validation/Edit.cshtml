                    <div class="form-outline flex-fill mb-0">
                      @Html.LabelFor(ww=>ww.Fname,htmlAttributes:new{@class="form-label"})
                      @Html.EditorFor(ww=>ww.Fname,additionalViewData:new{htmlAttributes=new{@class="form-control"}})
                      @Html.ValidationMessageFor(ww=>ww.Fname,"",htmlAttributes:new{@class="text-danger"})
                    </div>
                  </div>
                   <div class="d-flex flex-row align-items-center mb-4">
                    <div class="form-outline flex-fill mb-0">
                      @Html.LabelFor(ww=>ww.Lname,htmlAttributes:new{@class="form-label"})
                      @Html.EditorFor(ww=>ww.Lname,additionalViewData:new{htmlAttributes=new{@class="form-control"}})
                      @Html.ValidationMessageFor(ww=>ww.Lname,"",htmlAttributes:new{@class="text-danger"})
                    </div>
                  </div>
                      <div class="d-flex flex-row align-items-center mb-4">
                    <div class="form-outline flex-fill mb-0">
                      @Html.LabelFor(ww=>ww.Age,htmlAttributes:new{@class="form-label"})
