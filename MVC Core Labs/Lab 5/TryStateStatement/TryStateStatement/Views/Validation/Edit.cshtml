                      @Html.ValidationMessageFor(ww=>ww.Age,"",htmlAttributes:new{@class="text-danger"})
                    </div>
                  </div>
                                        <div class="d-flex flex-row align-items-center mb-4">
                    <div class="form-outline flex-fill mb-0">
                      @Html.LabelFor(ww=>ww.Salary,htmlAttributes:new{@class="form-label"})
                      @Html.EditorFor(ww=>ww.Salary,additionalViewData:new{htmlAttributes=new{@class="form-control"}})
                      @Html.ValidationMessageFor(ww=>ww.Salary,"",htmlAttributes:new{@class="text-danger"})
                    </div>
                  </div>
                                        <div class="d-flex flex-row align-items-center mb-4">
